{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capabilities for HESTIA",
  "windows": ["main"],
  "permissions": [
    "core:default",

    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-message",
    "dialog:allow-confirm",

    "opener:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        { "path": "$HOME/**" },
        { "path": "$DESKTOP/**" }
      ]
    }
  ]
}